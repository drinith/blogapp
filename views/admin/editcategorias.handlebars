{{/each}}
<h3>Editar Categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="nome">Nome:</label>
            <input type='hidden' name='id' value='{{categoria._id}}'>
            <input type="text" id="nome" name="nome" placeholder="Nome de categorias" value='{{categoria.nome}}' class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" id="slug" name="slug" placeholder="slug da catefgoria" value='{{categoria.slug}}' class="form-control">
            <br>
            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>